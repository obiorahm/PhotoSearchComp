<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/profile_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="9sp"
        android:id="@+id/message_date"
        android:paddingEnd="20sp"
        android:paddingStart="20sp"
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:gravity="center_horizontal"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/big_round_btn"
        app:layout_constraintTop_toTopOf="@+id/message_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/message_item_text"
        android:id="@+id/profile_img"/>
    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:id="@+id/message_item_text"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/message_date"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/profile_img"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingEnd="20sp"
        android:paddingStart="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp" />

</android.support.constraint.ConstraintLayout>